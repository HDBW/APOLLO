<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="De.HDBW.Apollo.Client.Views.PickUserNameView"
             xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels"
             x:DataType="viewModels:PickUserNameViewModel"
             Title="{x:Static strings:Resources.ConfirmDataUsageDialogView_Title}"
             IsBusy="{x:Binding IsBusy}"
             Style="{StaticResource DefaultPageStyle}">
    <Grid RowDefinitions="Auto, Auto, Auto,*, Auto">
        <Label Grid.Row="0" Text="{x:Static strings:Resources.Global_Benutzername}" Margin="24,24,24,4" Style="{StaticResource Noto14SemiBold}"/>
        <Entry Grid.Row="1" Text="{x:Binding Name, Mode=TwoWay}" Margin="24,0">
                <Entry.Behaviors>
                    <toolkit:EventToCommandBehavior Command="{x:Binding ValidateCommand}" EventName="TextChanged" CommandParameter="Name" />
                </Entry.Behaviors>
            </Entry>
        <Label x:Name="lblValidationErrorPassword" Text="{x:Binding [Name]}" TextColor="Red" />
        </Entry>
        <Border Grid.Row="3" Background="{StaticResource Neutral0Brush}" StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="{StaticResource Black}" Offset="0,0" Radius="16" Opacity="0.2"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16,16,0,0" />
            </Border.StrokeShape>
        </Border>
        <Button Grid.Row="3" Text="Weiter" Command="{x:Binding CreateAccountCommand}" Margin="24,16"/>
    </Grid>
</ContentPage>

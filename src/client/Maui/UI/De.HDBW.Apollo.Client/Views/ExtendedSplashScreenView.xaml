<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="De.HDBW.Apollo.Client.Views.ExtendedSplashScreenView"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False"
             xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models"
             x:DataType="viewModels:ExtendedSplashScreenViewModel"
             xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             IsBusy="{x:Binding IsBusy}" Padding="0">
    <Grid RowDefinitions="auto, *, auto, auto">
        <Label Margin="24,16,24,8" FontAttributes="Bold" HorizontalTextAlignment="Center" Text="{x:Static strings:Resources.ExtendedSplashScreenView_Welcome}" Style="{StaticResource NotoSerif24}" TextColor="{StaticResource Primary}" />
        <CarouselView Grid.Row="1" ItemsSource="{x:Binding Instructions}"
                IndicatorView="indicatorView"
                VerticalOptions="Fill"
                x:Name="PART_Animation">
            <CarouselView.ItemTemplate>
                <DataTemplate x:DataType="models:InstructionEntry">
                    <Grid RowDefinitions="auto, *, auto" >
                        <Label Text="{x:Binding Text}" HorizontalTextAlignment="Center" Style="{StaticResource Noto16}" Margin="24,0,24,8"/>
                        <Image Grid.RowSpan="3" Source="{x:Binding ImagePath}" IsVisible="{x:Binding HasImage}"/>
                        <Label Grid.Row="2" Text="{x:Binding Subline}" HorizontalTextAlignment="Center" Style="{StaticResource Noto12}" Margin="24,8,24,0"/>
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <IndicatorView Grid.Row="2"
                       x:Name="indicatorView"
                       IndicatorColor="{StaticResource Primary050}"
                       SelectedIndicatorColor="{StaticResource Primary}"
                       HorizontalOptions="Center"
                       Margin="24,8"/>
        <Button Grid.Row="3" VerticalOptions="End" Text="{x:Static strings:Resources.Global_StartNow}" Command="{x:Binding SkipCommand}" Margin="24,0,24,16"/>
    </Grid>
</ContentPage>

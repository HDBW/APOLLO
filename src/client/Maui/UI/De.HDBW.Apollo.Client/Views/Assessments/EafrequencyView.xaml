<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:De.HDBW.Apollo.Client.ViewModels.Assessments"
             xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models.Assessment"
             x:Class="De.HDBW.Apollo.Client.Views.Assessments.EafrequencyView"
             Title="{x:Binding Title}"
             x:DataType="viewModel:EafrequencyViewModel"
             FlowDirection="{x:Binding FlowDirection, Mode=OneWay}"
             Style="{StaticResource DefaultPageStyle}">
    <Grid RowDefinitions="*,Auto">
        <Grid RowDefinitions="*,Auto">
            <ScrollView>
                <VerticalStackLayout Padding="24" BindingContext="{x:Binding Question, Mode=OneWay}" x:DataType="models:EafrequencyEntry">
                    <VerticalStackLayout BindableLayout.ItemsSource="{x:Binding Images}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:ImageEntry">
                                <Image Source="{x:Binding AbsolutePath}" Aspect="AspectFit" HeightRequest="272"/>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                    <Label Text="{x:Binding Question, Mode=OneWay}" TextType="Html" Style="{StaticResource Noto16}" TextColor="{StaticResource TextColor}" Margin="0,24,0,8"/>
                    <Label Text="{x:Binding Situation, Mode=OneWay}" Style="{StaticResource Noto16SemiBold}" TextColor="{StaticResource TextColor}"/>
                </VerticalStackLayout>
            </ScrollView>
            <Border Grid.Row="1" Padding="16,16" Style="{StaticResource FooterStyle}">
                <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="auto,auto,auto" >
                    <Label Grid.Row="0" Grid.ColumnSpan="4" Text="{x:Binding [TxtAssesmentsEafrequencyInstruction], Mode=OneWay}" Margin="8,0,8,8" Style="{StaticResource Noto16}" TextColor="{StaticResource TextColor}"/>
                    <RadioButton Grid.Column="0" Grid.Row="1" SemanticProperties.Description="{x:Binding [TxtAssesmentsEafrequencyNever], Mode=OneWay}" ControlTemplate="{StaticResource RadioButtonLikeButtonEafrequencyViewTemplate}">
                        <RadioButton.Content>
                            <Label Text="0" Style="{StaticResource Noto16SemiBold}" TextColor="{StaticResource Primary}"/>
                        </RadioButton.Content>
                    </RadioButton>
                    <RadioButton Grid.Column="1" Grid.Row="1" ControlTemplate="{StaticResource RadioButtonLikeButtonEafrequencyViewTemplate}">
                        <RadioButton.Content>
                            <Label Text="1-9" Style="{StaticResource Noto16SemiBold}" TextColor="{StaticResource Primary}"/>
                        </RadioButton.Content>
                    </RadioButton>
                    <RadioButton Grid.Column="2" Grid.Row="1" ControlTemplate="{StaticResource RadioButtonLikeButtonEafrequencyViewTemplate}">
                        <RadioButton.Content>
                            <Label Text="10-49" Style="{StaticResource Noto16SemiBold}" TextColor="{StaticResource Primary}"/>
                        </RadioButton.Content>
                    </RadioButton>
                    <RadioButton Grid.Column="3" Grid.Row="1" SemanticProperties.Description="{x:Binding [TxtAssesmentsEafrequencyOften], Mode=OneWay}" SemanticProperties.Hint="50+"  ControlTemplate="{StaticResource RadioButtonLikeButtonEafrequencyViewTemplate}">
                        <RadioButton.Content>
                            <Label Text="50+" Style="{StaticResource Noto16SemiBold}" TextColor="{StaticResource Primary}"/>
                        </RadioButton.Content>
                    </RadioButton>
                    <Label x:Name="LblTxtNvr" Text="{x:Binding [TxtAssesmentsEafrequencyNever], Mode=OneWay}" Grid.Row="2" Grid.ColumnSpan="2" HorizontalOptions="Start" Margin="8,8,4,0" AutomationProperties.IsInAccessibleTree="False" TextColor="{StaticResource Primary}" Style="{StaticResource Noto14}"/>
                    <Label x:Name="LblTxtOvtn" Text="{x:Binding [TxtAssesmentsEafrequencyOften], Mode=OneWay}" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="2" HorizontalOptions="End" Margin="4,8,8,0"  AutomationProperties.IsInAccessibleTree="False" TextColor="{StaticResource Primary}" Style="{StaticResource Noto14}"/>
                </Grid>
            </Border>
        </Grid>
        <Button Command="{x:Binding NavigateCommand, Mode=OneTime}" Text="{x:Binding [BtnTxtAssesmentsNextQuestion], Mode=OneWay}" Grid.Row="1"/>
    </Grid>
</ContentPage>

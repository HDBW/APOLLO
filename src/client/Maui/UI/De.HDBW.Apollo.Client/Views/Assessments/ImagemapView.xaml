<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:De.HDBW.Apollo.Client.ViewModels.Assessments"
             xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models.Assessment"
             xmlns:controls="clr-namespace:De.HDBW.Apollo.Client.Controls"
             xmlns:blModels="clr-namespace:De.HDBW.Apollo.SharedContracts.Models;assembly=De.HDBW.Apollo.SharedContracts"
             x:Class="De.HDBW.Apollo.Client.Views.Assessments.ImagemapView"
             Title="{x:Binding Title}"
             x:DataType="viewModel:ImagemapViewModel"
             FlowDirection="{x:Binding FlowDirection, Mode=OneWay}"
             Style="{StaticResource DefaultPageStyle}">
    <ContentPage.Resources>
        <DataTemplate x:Key="Shape" x:DataType="blModels:Shape">
            <RadioButton AbsoluteLayout.LayoutBounds="30, 25" />
        </DataTemplate>
    </ContentPage.Resources>
    <Grid RowDefinitions="*,Auto" x:Name="PART_Root">
        <ScrollView>
            <VerticalStackLayout Padding="24" x:DataType="models:ImagemapEntry" BindingContext="{x:Binding Question, Mode=OneWay}" >
                <Label Text="{x:Binding Text, Mode=OneWay}" Margin="0,0,0,24" SemanticProperties.Hint="{x:Binding BindingContext[TxtAssesmentsGlobalBlindPersons], Source={x:Reference PART_Root}, Mode=OneWay}" Style="{StaticResource Noto16}" TextColor="{StaticResource TextColor}"/>
                <Label Text="{x:Binding Question, Mode=OneWay}" TextType="Html" Margin="0,0,0,24" Style="{StaticResource Noto16SemiBold}" TextColor="{StaticResource TextColor}"/>
                <Label Text="{x:Binding Instruction, Mode=OneWay}" TextType="Html" Margin="0,0,0,8" Style="{StaticResource Noto14}" TextColor="{StaticResource TextColor}"/>
                <Grid>
                    <controls:ImageInteractionView x:Name="PART_Canvas" 
                                    InteractionSize="30" 
                                    ImageSource="{x:Binding Image.AbsolutePath}"
                                    Interactions="{x:Binding Shapes}"
                                    InteractionBackgroundBrush="#A0FFFFFF"
                                    InteractionBorderBrush="{StaticResource PrimaryBrush}"
                                    InteractionSelectedBackgroundBrush="{StaticResource PrimaryBrush}"
                                    InteractionSelectedBorderBrush="{StaticResource PrimaryBrush}"
                                    HeightRequest="272"
                                    >
                    </controls:ImageInteractionView>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
        <Border Grid.Row="1" Padding="24,16" Style="{StaticResource FooterStyle}">
            <Button Command="{x:Binding NavigateCommand, Mode=OneTime}" Text="{x:Binding [BtnTxtAssesmentsGlobalNextQuestion], Mode=OneWay}"/>
        </Border>
    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:De.HDBW.Apollo.Client.ViewModels.Assessments"
             xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models.Assessment"
             x:Class="De.HDBW.Apollo.Client.Views.Assessments.BinaryView"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="Red"
             Title="BinaryView"
             x:DataType="viewModel:BinaryViewModel"
             FlowDirection="{x:Binding FlowDirection, Mode=OneWay}">
    <Grid RowDefinitions="*,Auto" x:Name="PART_Root">
        <ScrollView BindingContext="{x:Binding Question, Mode=OneWay}">
            <VerticalStackLayout x:DataType="models:BinaryEntry" Padding="24">
                <Label Text="{x:Binding Text, Mode=OneWay}" Margin="0,0,0,16"/>
                <Border Padding="12" Margin="0,0,0,0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{x:Binding TogglePlayCommand, Mode=OneTime}"/>
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="*, auto" >
                        <Label Text="{x:Binding BindingContext[AudioAssesmentsBinaryStart], Source={x:Reference PART_Root}, Mode=OneWay}" Margin="0,0,12,0">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{x:Binding IsPlaying, Mode=OneWay}" Value="True">
                                    <Setter Property="Text" Value="{x:Binding BindingContext[AudioAssesmentsBinaryStop], Source={x:Reference PART_Root}, Mode=OneWay}"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                        <Image Grid.Column="1" HeightRequest="24" WidthRequest="24" HorizontalOptions="End">
                            <Image.Source>
                                <FontImageSource Glyph="{StaticResource Play}" FontFamily="ApolloFontIcons" Size="24" Color="{StaticResource Primary}"/>
                            </Image.Source>
                            <Image.Triggers>
                                <DataTrigger TargetType="Image" Binding="{x:Binding IsPlaying, Mode=OneWay}" Value="True">
                                    <Setter Property="Source">
                                        <Setter.Value>
                                            <FontImageSource Glyph="{StaticResource Pause}" FontFamily="ApolloFontIcons" Size="24" Color="{StaticResource Primary}"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Image.Triggers>
                        </Image>
                    </Grid>
                </Border>
                <Grid ColumnDefinitions="*, auto" Margin="0,0,0,64" Grid.Row="1">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1"/>
                    </Grid.GestureRecognizers>
                    <Label Grid.Column="0" InputTransparent="True" TextColor="{StaticResource Primary}" Text="{x:Binding BindingContext[BtnTxtGlobalReset], Source={x:Reference PART_Root}, Mode=OneWay}" Margin="8,0,0,0" VerticalOptions="Center" HorizontalOptions="End" HorizontalTextAlignment="End"/>
                    <Image Grid.Column="1" HeightRequest="24" WidthRequest="24" HorizontalOptions="End" VerticalOptions="Start" Margin="12">
                        <Image.Source>
                            <FontImageSource Glyph="{StaticResource Reset}" FontFamily="ApolloFontIcons" Size="24" Color="{StaticResource Primary}"/>
                        </Image.Source>
                    </Image>
                </Grid>
                <Label Text="{x:Binding Instruction, Mode=OneWay}" Margin="0,0,0,8"/>
                <RadioButton Content="{x:Binding BindingContext[BtnTxtAssesmentsBinaryTrue], Source={x:Reference PART_Root}, Mode=OneWay}" Margin="0,0,0,8"/>
                <RadioButton Content="{x:Binding BindingContext[BtnTxtAssesmentsBinaryFalse], Source={x:Reference PART_Root}, Mode=OneWay}"/>
            </VerticalStackLayout>
        </ScrollView>
        <Border Grid.Row="1" Padding="24,16">
            <Button Text="{x:Binding [BtnTxtAssesmentsNextQuestion], Mode=OneWay}" Command="{x:Binding NavigateCommand, Mode=OneTime}" />
        </Border>
    </Grid>
</ContentPage>

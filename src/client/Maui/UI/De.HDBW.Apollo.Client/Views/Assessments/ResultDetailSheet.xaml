<?xml version="1.0" encoding="utf-8" ?>
<the49:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
             x:Class="De.HDBW.Apollo.Client.Views.Assessments.ResultDetailSheet"
             HasHandle="True"
             Padding="24, 0, 24, 16">
    <VerticalStackLayout>
        <Grid HorizontalOptions="FillAndExpand" MinimumHeightRequest="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Text="Details zu deinem Testergebnis" Style="{StaticResource Noto20Bold}" SemanticProperties.HeadingLevel="Level1"/>

            <ImageButton Grid.Column="1" Padding="12"
        Command="{x:Binding CloseCommand}"
        HeightRequest="24"
        WidthRequest="24"
        HorizontalOptions="End" VerticalOptions="Center"
        SemanticProperties.Description="{x:Static strings:Resources.Global_Close}">
                <ImageButton.Source>
                    <FontImageSource Glyph="{StaticResource Close}" FontFamily="ApolloFontIcons" Size="24" Color="{StaticResource Primary}"/>
                </ImageButton.Source>
            </ImageButton>

        </Grid>
    </VerticalStackLayout>
</the49:BottomSheet>

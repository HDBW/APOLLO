<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="De.HDBW.Apollo.Client.Views.Profile.EducationInfo.VocationalTrainingView"
              xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models.Interactions"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels.Profile.EducationInfoEditors"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:DataType="viewModels:VocationalTrainingViewModel"
             Shell.TabBarIsVisible="False"
             Title="VocationalTrainingView"
             IsBusy="{x:Binding IsBusy}" Padding="0">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="delete" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <Label Text="{x:Static strings:Resources.Global_Start}"/>
        <DatePicker Date="{x:Binding Start, Mode=TwoWay}" ios:DatePicker.UpdateMode="WhenFinished"/>
        <FlexLayout Direction="Row" AlignItems="Center" JustifyContent="SpaceBetween">
            <Label Text="{x:Static strings:Resources.Global_IsCompleted}"/>
            <Switch x:Name="Switch" IsToggled="True" />
        </FlexLayout>
        <VerticalStackLayout IsVisible="{x:Binding IsToggled, Source={x:Reference Switch}}">
            <Label Text="{x:Static strings:Resources.Global_End}"/>
            <DatePicker Date="{x:Binding End, Mode=TwoWay}" ios:DatePicker.UpdateMode="WhenFinished"/>
        </VerticalStackLayout>
        <Label Text="{x:Static strings:Resources.Global_NameOfInstitution}"/>
        <Entry Text="{x:Binding NameOfInstitution, Mode=TwoWay}" />
        <Label Text="{x:Static strings:Resources.Global_City}"/>
        <Entry Text="{x:Binding City, Mode=TwoWay}" />
        <Label Text="{x:Static strings:Resources.Global_Country}"/>
        <Entry Text="{x:Binding Country, Mode=TwoWay}" />
        <Label Text="{x:Static strings:Resources.Global_Occupation}"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Text="{x:Binding OccupationName}" Grid.Column="0"/>
            <ImageButton Source="search.svg" Command="{x:Binding SearchOccupationCommand}" Grid.Column="1"/>
        </Grid>
        <Label Text="{x:Static strings:Resources.Global_Graduation}"/>
        <Entry Text="{x:Binding Description, Mode=TwoWay}" />
        <Label Text="{x:Static strings:Resources.Global_UniverityDegree}"/>
        <Picker ItemsSource="{x:Binding UniverityDegrees}"
                ItemDisplayBinding="{x:Binding Text}"
                SelectedItem="{x:Binding SelectedUniverityDegree, Mode=TwoWay}"/>
        <Label Text="{x:Static strings:Resources.Global_CompletionState}"/>
        <Picker ItemsSource="{x:Binding CompletionStates}"
            ItemDisplayBinding="{x:Binding Text}"
            SelectedItem="{x:Binding SelectedCompletionState, Mode=TwoWay}"/>
    </VerticalStackLayout>
</ContentPage>

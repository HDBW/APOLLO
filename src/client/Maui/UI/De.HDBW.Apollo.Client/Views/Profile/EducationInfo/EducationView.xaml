<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="De.HDBW.Apollo.Client.Views.Profile.EducationInfo.EducationView"
             xmlns:cdp="clr-namespace:FedericoNembrini.Maui.CustomDatePicker;assembly=MauiCustomDatePicker"
             xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models.Interactions"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels.Profile.EducationInfoEditors"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:DataType="viewModels:EducationViewModel"
             Title="EducationView"
             IsBusy="{x:Binding IsBusy}"
             Style="{StaticResource DefaultPageStyle}">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="delete" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <Label Text="{x:Static strings:Resources.Global_Start}" Style="{StaticResource Noto14SemiBold}"/>
        <Border Style="{StaticResource InputBorderStyle}">
            <Grid ColumnDefinitions="*, auto">
                <cdp:NullableDatePicker HorizontalOptions="Fill"
                                IsClearButtonVisible="False"
                                VerticalOptions="Center"
                                Date="{x:Binding Start, Mode=TwoWay}" ios:DatePicker.UpdateMode="WhenFinished"/>
                <Image Source="calendar.png" Grid.Column="1"/>
            </Grid>
        </Border>

        <Label Text="{x:Static strings:Resources.Global_End}" Style="{StaticResource Noto14SemiBold}"/>
        <Border Style="{StaticResource InputBorderStyle}">
            <Grid ColumnDefinitions="*, auto, auto">
                <cdp:NullableDatePicker HorizontalOptions="Fill"
                                IsClearButtonVisible="False"
                                VerticalOptions="Center"
                                NullableDate="{x:Binding End, Mode=TwoWay}" ios:DatePicker.UpdateMode="WhenFinished"/>
                <ImageButton Source="delete.png" Command="{x:Binding ClearEndCommand}" IsVisible="{x:Binding HasEnd}" Grid.Column="1" Margin="8,0" />
                <Image Source="calendar.png" Grid.Column="2"/>
            </Grid>
        </Border>

        <Label Text="{x:Static strings:Resources.Global_NameOfInstitution}" Style="{StaticResource Noto14SemiBold}"/>
        <Entry Text="{x:Binding NameOfInstitution, Mode=TwoWay}" />

        <Label Text="{x:Static strings:Resources.Global_City}" Style="{StaticResource Noto14SemiBold}"/>
        <Entry Text="{x:Binding City, Mode=TwoWay}" />

        <Label Text="{x:Static strings:Resources.Global_Country}" Style="{StaticResource Noto14SemiBold}"/>
        <Entry Text="{x:Binding Country, Mode=TwoWay}" />

        <Label Text="{x:Static strings:Resources.Global_TypeOfSchool}" Style="{StaticResource Noto14SemiBold}"/>
        <Picker ItemsSource="{x:Binding TypeOfSchools}"
                ItemDisplayBinding="{x:Binding Text}"
                SelectedItem="{x:Binding SelectedTypeOfSchool, Mode=TwoWay}"/>

        <Label Text="{x:Static strings:Resources.Global_SchoolGraduation}" Style="{StaticResource Noto14SemiBold}"/>
        <Picker ItemsSource="{x:Binding SchoolGraduations}"
                ItemDisplayBinding="{x:Binding Text}"
                SelectedItem="{x:Binding SelectedSchoolGraduation, Mode=TwoWay}"/>

        <Label Text="{x:Static strings:Resources.Global_CompletionState}" Style="{StaticResource Noto14SemiBold}"/>
        <Picker ItemsSource="{x:Binding CompletionStates}"
                ItemDisplayBinding="{x:Binding Text}"
                SelectedItem="{x:Binding SelectedCompletionState, Mode=TwoWay}"/>
    </VerticalStackLayout>
</ContentPage>

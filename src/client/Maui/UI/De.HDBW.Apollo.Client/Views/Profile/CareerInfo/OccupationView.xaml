<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="De.HDBW.Apollo.Client.Views.Profile.CareerInfo.OccupationView"
             xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models.Interactions"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels.Profile.CareerInfoEditors"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:DataType="viewModels:OccupationViewModel"
             Shell.TabBarIsVisible="False"
             Title="OccupationView"
             IsBusy="{x:Binding IsBusy}"
             Style="{StaticResource DefaultPageStyle}">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="delete" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <Label Text="{x:Static strings:Resources.Global_Start}"/>
        <DatePicker Date="{x:Binding Start, Mode=TwoWay}" ios:DatePicker.UpdateMode="WhenFinished"/>
        <FlexLayout Direction="Row" AlignItems="Center" JustifyContent="SpaceBetween">
            <Label Text="{x:Static strings:Resources.Global_IsCompleted}" VerticalOptions="Start"/>
            <Switch x:Name="Switch" IsToggled="True" VerticalOptions="End"/>
        </FlexLayout>
        <VerticalStackLayout IsVisible="{x:Binding IsToggled, Source={x:Reference Switch}}">
            <Label Text="{x:Static strings:Resources.Global_End}"/>
            <DatePicker Date="{x:Binding End, Mode=TwoWay}" ios:DatePicker.UpdateMode="WhenFinished"/>
        </VerticalStackLayout>
        <Label Text="{x:Static strings:Resources.Global_Occupation}"/>
        <FlexLayout Direction="Row" AlignItems="Center" JustifyContent="SpaceBetween">
            <Label Text="{x:Binding OccupationName}" VerticalOptions="Start"/>
            <ImageButton Source="search.png" Command="{x:Binding SearchOccupationCommand}" VerticalOptions="End" HeightRequest="24" WidthRequest="24"/>
        </FlexLayout>
        <Label Text="{x:Static strings:Resources.Global_Discribtion}"/>
        <Entry Text="{x:Binding Description, Mode=TwoWay}" />
        <Label Text="{x:Static strings:Resources.Global_NameOfInstitution}"/>
        <Entry Text="{x:Binding NameOfInstitution, Mode=TwoWay}" />
        <Label Text="{x:Static strings:Resources.Global_City}"/>
        <Entry Text="{x:Binding City, Mode=TwoWay}" />
        <Label Text="{x:Static strings:Resources.Global_Country}"/>
        <Entry Text="{x:Binding Country, Mode=TwoWay}" />
        <Label Text="{x:Static strings:Resources.Global_WorkTimeModel}" IsVisible="{x:Binding ShowWorkTimeModelsSelection}" />
        <Picker ItemsSource="{x:Binding WorkTimeModels}"
                ItemDisplayBinding="{x:Binding Text}"
                SelectedItem="{x:Binding SelectedWorkTimeModel, Mode=TwoWay}"
                IsVisible="{x:Binding ShowWorkTimeModelsSelection}" />
    </VerticalStackLayout>
</ContentPage>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="De.HDBW.Apollo.Client.Views.Profile.CareerInfo.OccupationView"
             xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models.Interactions"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels.Profile.CareerInfoEditors"
             x:DataType="viewModels:OccupationViewModel"
             Shell.TabBarIsVisible="False"
             Title="OccupationView"
             IsBusy="{Binding IsBusy}" Padding="0">
    <ContentPage.Resources>
        <DataTemplate x:Key="WorkTimeTemplate" x:DataType="models:InteractionEntry">
            <Label Text="{x:Binding Data}" />
        </DataTemplate>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <DatePicker Date="{x:Binding Start, Mode=TwoWay}" />
        <DatePicker Date="{x:Binding End, Mode=TwoWay}" />
        <Label Text="{x:Binding OccupationName}" />
        <ImageButton Source="search.png" Command="{x:Binding SearchOccupationCommand}"/>
        <Entry Text="{x:Binding Description, Mode=TwoWay}" />
        <Picker ItemsSource="{x:Binding WorkTimeModels}"
                SelectedItem="{x:Binding SelectedWorkTimeModel, Mode=TwoWay}"
                IsVisible="{x:Binding ShowWorkTimeModelsSelection}" />

    </VerticalStackLayout>
</ContentPage>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="De.HDBW.Apollo.Client.Views.Profile.MobilityEditView"
             xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels.Profile"
             xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models"
             x:DataType="viewModels:MobilityEditViewModel"
             Title="{x:Static strings:Resources.MobilityEditView_Title}"
             IsBusy="{x:Binding IsBusy}"
             Style="{StaticResource DefaultPageStyle}">
    <ContentPage.Resources>
        <DataTemplate x:Key="DriverLicenseTemplate"  x:DataType="models:InstructionEntry">
            <VerticalStackLayout>
                <HorizontalStackLayout Margin="24,0">
                    <CheckBox />
                    <Image Source="edit.png" WidthRequest="24" HeightRequest="24" Margin="8,0"/>
                    <Label Text="{x:Binding Text}" Style="{StaticResource Noto14}" VerticalOptions="Center" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>
                <BoxView HeightRequest="1" Color="{StaticResource Neutral500}" />
            </VerticalStackLayout>
        </DataTemplate>
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto, Auto,Auto, Auto, Auto, *">
        <Label Text="{x:Static strings:Resources.MobilityEditView_Willing}" Style="{StaticResource Noto14SemiBold}" Margin="24,0" />
        <Border Grid.Row="1" Margin="24,0" Style="{StaticResource InputBorderStyle}">
            <Picker ItemsSource="{x:Binding WillingsToTravel}"
                ItemDisplayBinding="{x:Binding Text}"
                SelectedItem="{x:Binding SelectedWillingToTravel, Mode=TwoWay}"/>
        </Border>
        <Label Grid.Row="2" Text="{x:Static strings:Resources.MobilityEditView_Vehicle}" Style="{StaticResource Noto14SemiBold}" Margin="24,20,0,0"/>
        <CheckBox Grid.Row="3" HorizontalOptions="Start" Margin="24,0" />

        <Label Grid.Row="4" Text="{x:Static strings:Resources.MobilityEditView_DriverLicenses}" Style="{StaticResource Noto14SemiBold}" Margin="24,20,0,0"/>
        <CollectionView Grid.Row="5" ItemsSource="{x:Binding DriverLicenses}"
                        ItemTemplate="{StaticResource DriverLicenseTemplate}"
                        ItemsLayout="VerticalList">
        </CollectionView>
    </Grid>
</ContentPage>

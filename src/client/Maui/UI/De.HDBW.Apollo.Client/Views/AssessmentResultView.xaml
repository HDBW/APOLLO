<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="De.HDBW.Apollo.Client.Views.AssessmentResultView"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels"
             x:DataType="viewModels:AssessmentResultViewModel"
             xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             Title="{x:Static strings:Resource.AssessmentResultView_Title}"
             Shell.FlyoutBehavior="Disabled">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding ConfirmCommand}" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout>
        <ProgressBar Progress="{Binding Score}" />
        <Button Command="{Binding ConfirmCommand}" Text="{x:Static strings:Resource.AssessmentResultView_CloseAssessment}" />
    </VerticalStackLayout>
</ContentPage>


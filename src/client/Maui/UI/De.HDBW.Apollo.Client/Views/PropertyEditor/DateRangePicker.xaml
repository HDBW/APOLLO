<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
             x:Class="De.HDBW.Apollo.Client.Views.PropertyEditor.DateRangePicker"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.Models.Editors"
             x:DataType="viewModels:DateRangePropertyEditor">
    <VerticalStackLayout>
        
        <Label 
            Text="{Binding Label}"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />

        <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
            <Label Text="{x:Static strings:Resources.PropertyEditor_StartDate}" Grid.Row="0" Grid.Column="0"/>
            <Label Text="{x:Static strings:Resources.PropertyEditor_EndDate}" Grid.Row="0" Grid.Column="1"/>

            <DatePicker x:Name="startDatePicker"
                Date="{Binding Value.StartDate}"
                Grid.Row="2"
                Grid.Column="0"
                Format="dd.MM.yyyy"/>

            <DatePicker x:Name="endDatePicker"
                Date="{Binding Value.EndDate}"
                Grid.Row="2"
                Grid.Column="1"
                Format="dd.MM.yyyy"/>
        </Grid>
        
    </VerticalStackLayout>
</ContentView>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="De.HDBW.Apollo.Client.Views.PropertyEditor.DefaultBooleanPropertyEditor"
             xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels.PropertyEditors"
             x:DataType="viewModels:BooleanPropertyEditor">
    <Grid ColumnDefinitions="Auto, *, Auto">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{x:Binding ToggleStateCommand}" />
        </Grid.GestureRecognizers>
        <CheckBox IsChecked="{x:Binding Value, Mode=TwoWay}" HorizontalOptions="Start" InputTransparent="True"/>
        <Label Grid.Column="1" Text="{x:Binding Label}" VerticalOptions="Center" Style="{StaticResource Noto14Primary}"/>
        <ImageButton Command="{x:Binding ClearCommand}" Grid.Column="2" WidthRequest="24" HeightRequest="24"
             Source="delete.png" />
    </Grid>
    
</ContentView>

<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="De.HDBW.Apollo.Client.Views.PropertyEditor.DefaultStringPropertyEditor"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            xmlns:models="clr-namespace:De.HDBW.Apollo.Client.Models.Editors"
            x:DataType="models:StringPropertyEditor">

    <VerticalStackLayout>
        <Label 
        Text="{Binding Label}"
        VerticalOptions="Center" 
        HorizontalOptions="Start"/>
        <Editor Text="{Binding Value}"/>
        
    </VerticalStackLayout>

    
</ContentView>

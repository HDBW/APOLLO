<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="De.HDBW.Apollo.Client.Dialogs.CancelAssessmentDialog"
               xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
               xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels"
               x:DataType="viewModels:CancelAssessmentDialogViewModel" >
    <VerticalStackLayout Padding="20">
        <Label Text="{x:Static strings:Resource.CancelAssessmentDialog_Title}"/>
        <Label Text="{x:Static strings:Resource.CancelAssessmentDialog_Message}" Margin="0,20"/>
        <Button Text="{x:Static strings:Resource.CancelAssessmentDialog_Cancel}" Command="{Binding CancelCommand}" Margin="0,20"/>
        <Button Text="{x:Static strings:Resource.CancelAssessmentDialog_Continue}"  Command="{Binding ContinueCommand}" Margin="0,20"/>
    </VerticalStackLayout>
</toolkit:Popup>

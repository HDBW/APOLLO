<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="De.HDBW.Apollo.Client.Dialogs.FirstTimeDialog"
               xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
               xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels"
              x:DataType="viewModels:FirstTimeDialogViewModel"
              >

    <VerticalStackLayout Padding="20">
        <Label Text="{x:Static strings:Resource.FirstTimeDialog_Title}"/>
        <Label Text="{x:Static strings:Resource.FirstTimeDialog_Message}" Margin="0,20"/>
        <Button Text="{x:Static strings:Resource.FirstTimeDialog_OpenTutorial}" Command="{Binding OpenTutorialCommand}" Margin="0,20"/>
        <Button Text="{x:Static strings:Resource.FirstTimeDialog_Continue}"  Command="{Binding ContinueCommand}" Margin="0,20"/>
    </VerticalStackLayout>
</toolkit:Popup>

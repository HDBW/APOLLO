<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="De.HDBW.Apollo.Client.Dialogs.SkipQuestionDialog"
               xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
               xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels"
               x:DataType="viewModels:SkipQuestionDialogViewModel">
    <Frame BackgroundColor="{StaticResource Background}" Padding="20" MaximumWidthRequest="296" CornerRadius="12">
        <VerticalStackLayout>
            <Label Text="{x:Static strings:Resource.SkipQuestionDialog_Title}" Margin="0,8,0,8" Style="{StaticResource Noto16}" TextColor="{StaticResource Primary900}"/>
            <Label Text="{x:Static strings:Resource.SkipQuestionDialog_Message}" Margin="0,0,0,24" Style="{StaticResource Noto12}"/>
            <HorizontalStackLayout>
                <Button Text="{x:Static strings:Resource.SkipQuestionDialog_Cancel}" Command="{Binding CancelCommand}" Margin="0,0,8,0"/>
                <Button Text="{x:Static strings:Resource.SkipQuestionDialog_Continue}"  Command="{Binding ContinueCommand}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>

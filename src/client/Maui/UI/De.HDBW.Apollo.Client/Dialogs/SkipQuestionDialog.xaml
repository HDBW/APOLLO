<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="De.HDBW.Apollo.Client.Dialogs.SkipQuestionDialog"
               xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
               xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels"
               Color="{StaticResource Background}"
               x:DataType="viewModels:SkipQuestionDialogViewModel">
    <Grid RowDefinitions="*, auto, 20" Padding="0" x:Name="Part_Root">
         <Border StrokeThickness="0" Stroke="{StaticResource Background}">
            <VerticalStackLayout Padding="{OnPlatform '0,20', Android='20'}" BackgroundColor="{StaticResource Background}">
                <Label HorizontalTextAlignment="Center" Text="{x:Static strings:Resources.SkipQuestionDialog_Title}" Margin="0,8,0,8" Style="{StaticResource Noto16}" TextColor="{StaticResource Primary900}"/>
                <Label HorizontalTextAlignment="Center" Text="{x:Static strings:Resources.SkipQuestionDialog_Message}" Margin="0,0,0,8" Style="{StaticResource Noto12}"/>
            </VerticalStackLayout>
        </Border>
        <Grid ColumnDefinitions="*,8,*" Grid.Row="1" Margin="{OnPlatform '0', Android='8'}">
            <Button Text="{x:Static strings:Resources.SkipQuestionDialog_Continue}" Style="{StaticResource BorderButton}" Command="{x:Binding ContinueCommand}" />
            <Button Text="{x:Static strings:Resources.SkipQuestionDialog_Cancel}"  Command="{x:Binding CancelCommand}" Grid.Column="2"/>
        </Grid>
    </Grid>
</toolkit:Popup>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="De.HDBW.Apollo.Client.Dialogs.SkipQuestionDialog"
               xmlns:strings="clr-namespace:De.HDBW.Apollo.Client.Resources.Strings"
               xmlns:viewModels="clr-namespace:De.HDBW.Apollo.Client.ViewModels"
               x:DataType="viewModels:SkipQuestionDialogViewModel">
    <VerticalStackLayout Padding="20">
        <Label Text="{x:Static strings:Resource.SkipQuestionDialog_Title}"/>
        <Label Text="{x:Static strings:Resource.SkipQuestionDialog_Message}" Margin="0,20"/>
        <Button Text="{x:Static strings:Resource.SkipQuestionDialog_Cancel}" Command="{Binding CancelCommand}" Margin="0,20"/>
        <Button Text="{x:Static strings:Resource.SkipQuestionDialog_Continue}"  Command="{Binding ContinueCommand}" Margin="0,20"/>
    </VerticalStackLayout>
</toolkit:Popup>
